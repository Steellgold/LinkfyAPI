generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Link {
  id        String   @id
  url       String
  slug      String   @unique
  clicks    Int      @default(0)
  createdAt DateTime @default(now())
  userId    String?
  visitorId String
  status    Boolean  @default(true)
}

model User {
  id        String  @id
  email     String  @unique
  isPremium Boolean @default(false)
  role      String  @default("user")
}
